body {	
	margin: 0 auto;
	text-align: left;
	font-size: 14px;
	font-family: '맑은 고딕','굴림','dotum','Arial';
	letter-spacing:-0.05em;
	-webkit-text-size-adjust:none;
}

a { text-decoration: none; }
a img { border: 0; }



/* 홈페이지 제목 설정 */
h1
{
	text-align: center;
	line-height: 156px;	
	color: #ffffff;
	margin:0;
    font-size: 20px;
    background-color: #2B2E3C;
    height: 155.56px;
    font-size: 30px;
}

.div_simbal {
	position: absolute;
        top:223px;
        width:100%;
        left:0px;
